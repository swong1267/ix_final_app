<div id="white">
	<div class="container">
	    <div class="col-lg-4 col-lg-offset-4 centered">
	<h1><%= @event.name %> Page</h1>
	<h5>Event Creator: <%= @event.user.email %></h3>
	<p><%= image_tag @event.avatar.url(:medium) %></p>

	<p>
		<% if can_crud_event?(@event) %>
			<%= link_to "Edit Event", edit_event_path(@event) %> | 
			<%= link_to "Delete Event", event_path(@event), method: :delete, data: { confirm: "Are you sure?" } %> | 
		<% else %>
			<%= link_to "Message Event Creator", new_message_path(recipient: @event.user.email) %> | 
		<% end %>
		<%= link_to "Back", events_path %>
	</p>
	<p>Location: <%= @event.location %></p>
	<p>Number of People: <%= @event.people %></p>
	<p>Category: <%= @event.category %></p>
	<p>Description: <%= @event.description %></p>
	<p>Public: 
		<% if @event.public %>
			Yes
		<% else %>
			No
		<% end %>
	</p>
<% unless @event.space == nil %>
	<p>Space: <%= @event.space.name %></p>
<% end %>
</div>
</div>
</div>