<div id="white">
	<div class="container">
	  <div class="col-lg-12 centered">
	  <h1>My Events</h1>
	 


                        <div class="panel-body">
                        	<div class="list-group">
						<% @events.each do |event| %>

									<div class="list-group-item">
										<div class="row">
											<div class="col-xs-3">
												<%= image_tag(event.avatar(:medium), :size => "100x80") %>
											</div>
											<div class="col-xs-3 vertical-center">
												<b><%= event.name %></b><br>
													<%= event.location %><br>
													<small>Created <%= event.created_at.to_date %></small><br>
													
											</div>
											<div class="col-xs-3"><br>
												<%= truncate(event.description, length: 200, separator: ' ') %>
											</div>
											<div class="col-xs-3"><br>
															
																<%= link_to '<i class="glyphicon glyphicon-edit"></i> Edit'.html_safe, edit_event_path(event) %>
																<br>
															<%= link_to '<i class="glyphicon glyphicon-remove"></i> Delete'.html_safe, event_path(event), method: :delete, data: { confirm: "Are you sure you want to delete this space?" } %>
											</div>
										</div>
									</div>
							<% end %>

					
								<%= link_to "Add New Event", new_event_path, class: "list-group-item" %>

                            </div>
	                           
                        </div>
                        <!--/panel-body-->
             


	</div>

</div>