<%= form_for @event do |f| %>

<% if @event.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name, :size => 40 %>
	</p>

	<p>
		<%= f.label :location %><br>
		<%= f.text_field :location, :size => 40 %>
	</p>

	<p>
		<%= f.label :people, "Estimated Number of People" %><br>
		<%= f.text_field :people, :size => 40 %>
	</p>

	<p>
		<%= f.label :category %><br>
		<%= f.select :category, ["Workshop/Class", "Gathering", "Meeting/Conference", "Performance", "Gallery", "Personal", "Other"] %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description, :size => "40x4" %>
	</p>

	<p>
		<%= f.radio_button :public, true  %> <%= f.label :public, "Public Event" %> <br>
  	
  <%= f.radio_button :public, false %> <%= f.label :public,  "Private Event" %>
  </p>
		
	<p>
		<%= f.submit %>
	</p>
	
<% end %>