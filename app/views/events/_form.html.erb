<%= form_for @event do |f| %>

<% if @event.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</p>

	<p>
		<%= f.label :people, "Estimated Number of People" %>
		<%= f.text_field :people %>
	</p>

	<p>
		<%= f.label :category %>
		<%= f.select :category, ["Workshop/Class", "Gathering", "Meeting/Conference", "Performance", "Gallery", "Personal", "Other"] %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.radio_button :public, true  %> <%= f.label :public, "Public Event" %>
  	
  <%= f.radio_button :public, false %> <%= f.label :public,  "Private Event" %>
  </p>
		
	<p>
		<%= f.submit %>
	</p>
	
<% end %>