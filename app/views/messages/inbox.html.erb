<div id="white">
	<div class="container">
	  <div class="col-lg-4 col-lg-offset-4 centered">
			<h1>Inbox</h1>
			<%= link_to "Send New Message", new_message_path %>	|
			<%= link_to "Sent Mail", sent_mail_messages_path %>
		</div>
		<div class="col-lg-10 col-lg-offset-2 centered">
		<br><br>
			<div class="row">
				<b>
					<div class="col-md-2">From:</div>
					<div class="col-md-6">Subject:</div>
					<div class="col-md-2">Date:</div>
				</b>
			</div>
			<div class="row">
				<% @messages.each do |message| %>
					<div class="col-md-2">
						<% if message.sender == nil %>
							Admin
						<% else %>
							<%= message.sender.email %>
						<% end %>
					</div>
					<div class="col-md-6"><%= link_to message.subject, message_path(message) %></div>
					<div class="col-md-2"><%= message.created_at %></div>
				<% end %>
			</div>
			<br><br>
		</div>
	</div>
</div>