<div id="white">
	<div class="container">
	  <div class="col-lg-12 centered">
	  <h1>My Spaces</h1>
	 


                        <div class="panel-body">
                        	<div class="list-group">
						<% @spaces.each do |space| %>

									<div class="list-group-item">
										<div class="row">
											<div class="col-xs-3">
												<%= image_tag(space.avatar(:medium), :size => "100x80") %>
											</div>
											<div class="col-xs-3 vertical-center">
												<b><%= link_to space.name, space_path(space) %></b><br>
													<%= space.location %><br>
													<small>Created <%= space.created_at.to_date %></small><br>
													<span class="badge"><%= space.requests.unanswered.count %> Pending Requests</span>
											</div>
											<div class="col-xs-3"><br>
												<%= truncate(space.description, length: 200, separator: ' ') %>
											</div>
											<div class="col-xs-3"><br>
															
																<%= link_to '<i class="glyphicon glyphicon-edit"></i> Edit'.html_safe, edit_space_path(space) %>
																<br>
															<%= link_to '<i class="glyphicon glyphicon-remove"></i> Delete'.html_safe, space_path(space), method: :delete, data: { confirm: "Are you sure you want to delete this space?" } %>
											</div>
										</div>
									</div>
							<% end %>

					
					
								<%= link_to "Add New Space", new_space_path, class: "list-group-item" %>

                            </div>
	                           
                        </div>
                        <!--/panel-body-->

	</div>

</div>