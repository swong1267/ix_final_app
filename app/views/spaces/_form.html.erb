<%= form_for @space do |f| %>

	<% if @space.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@space.errors.count, "error") %> prohibited this space from being saved:</h2>

      <ul>
      <% @space.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :category %>
		<%= f.select :category, ["Display", "Room", "Building", "Outdoor Area", "Other"] %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</p>

	<p>
		<%= f.label :price %>
		<%= f.text_field :price %>
	</p>

	<p>
		<%= f.label :capacity %>
		<%= f.text_field :capacity %>
	</p>
		
	<p>
		<%= f.submit %>
	</p>
<% end %>