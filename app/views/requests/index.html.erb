<div id="white">
	<div class="container">
	   <div class="col-lg-12 centered">

			<h1>Requests</h1>

			<h3>Requests for my spaces:</h3>

			<div class="row">
				<div class="col-md-2">Sent from:</div>
				<div class="col-md-2">Event:</div>
				<div class="col-md-2">My Space:</div>
				<div class="col-md-6 request-col">Request:</div>
			</div>
			<% @received_requests.each do |request| %>
				<div class="row">
					<div class="col-md-2"><%= request.event.user.email %></div>
					<div class="col-md-2"><%= request.event.name %></div>
					<div class="col-md-2"><%= request.space.name %></div>
					<div class="col-md-2 request-col"><%= request.body %></div>
					<div class="col-md-2"><%= link_to "Confirm", confirm_request_path(request), class: 'btn btn-primary' %></div>
					<div class="col-md-2"><%= link_to "Deny", deny_request_path(request), class: 'btn btn-primary' %></div>
				</div>
			<% end %>

			<h3>My requests for spaces:</h3>

			<div class="row">
				<div class="col-md-2">Sent to:</div>
				<div class="col-md-2">My Event:</div>
				<div class="col-md-2">Space</div>
				<div class="col-md-6 request-col">My Request:</div>
			</div>
			<% @sent_requests.each do |request| %>
				<div class="row">
					<div class="col-md-2"><%= request.space.user.email %></div>
					<div class="col-md-2"><%= request.event.name %></div>
					<div class="col-md-2"><%= request.space.name %></div>
					<div class="col-md-4 request-col"><%= request.body %></div>
					<div class="col-md-2"><%= link_to "Delete Request", request_path(request), method: :delete, data: { confirm: "Are you sure? " } %></div>
				</div>
			<% end %>
		</div>
	</div>
</div>